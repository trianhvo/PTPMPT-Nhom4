<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit profile</h1>
    <div class="col-6 offset-3">
        <form action="/users/<%=user._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>        
            <div class="form-group">
                <label>First Name</label>
                <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
            </div>
            <div class="form-group">
                <label>About Yourself</label>
                <textarea rows="10" cols="50" class="form-control" name="user[bio]"><%= user.bio %></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Profile</button>
            </div>
        </form>
        <a href="/users/<%= user._id%>">Back To Profile</a>

    </div>
</div>